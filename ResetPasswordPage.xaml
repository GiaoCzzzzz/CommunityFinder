<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CommunityFinder.Views.ResetPasswordPage"
    Title="Reset Password"
    BackgroundColor="#FFFDE7">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- 顶部图标 -->
            <HorizontalStackLayout HorizontalOptions="End">
                <Frame
          HeightRequest="60"
          WidthRequest="60"
          CornerRadius="30"
          BackgroundColor="#FFF59D"
          HasShadow="False"
          HorizontalOptions="End"
          VerticalOptions="Start">
                    <Image
            Source="reset_icon.png"
            HeightRequest="36"
            WidthRequest="36"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
                </Frame>
            </HorizontalStackLayout>

            <!-- 页面标题 -->
            <Label Text="Reset Password"
             FontSize="28"
             FontAttributes="Bold"
             HorizontalOptions="Center"
             TextColor="#333" />

            <!-- 新密码 -->
            <StackLayout Spacing="4">
                <Label Text="Create new password*" FontSize="14" TextColor="#333" />
                <Grid ColumnDefinitions="*,Auto">
                    <Entry x:Name="PasswordEntry"
                 Placeholder="请输入新密码"
                 IsPassword="{Binding IsPasswordHidden}"
                 BackgroundColor="#F0F0F0"
                 HeightRequest="48"
                 FontSize="16"
                 Text="{Binding NewPassword}"
                 Grid.Column="0" />
                    <ImageButton Source="eye_icon.png"
                       Command="{Binding TogglePasswordVisibilityCommand}"
                       HeightRequest="24"
                       WidthRequest="24"
                       BackgroundColor="Transparent"
                       Grid.Column="1" />
                </Grid>
            </StackLayout>

            <!-- 确认密码 -->
            <StackLayout Spacing="4">
                <Label Text="Confirm Password*" FontSize="14" TextColor="#333" />
                <Entry x:Name="ConfirmEntry"
               Placeholder="Please Enter"
               IsPassword="True"
               BackgroundColor="#F0F0F0"
               HeightRequest="48"
               FontSize="16"
               Text="{Binding ConfirmPassword}" />
                <Label Text="* 密码不一致或格式错误"
               TextColor="Red"
               FontSize="12"
               IsVisible="{Binding IsPasswordMismatch}" />
            </StackLayout>

            <!-- 提交按钮 -->
            <Button Text="确认"
              BackgroundColor="#4CAF50"
              TextColor="White"
              FontAttributes="Bold"
              CornerRadius="8"
              HeightRequest="50"
              Command="{Binding ResetPasswordCommand}" />

        </StackLayout>
    </ScrollView>
</ContentPage>
