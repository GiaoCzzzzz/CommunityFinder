<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CommunityFinder.Views.ForgotPasswordPage"
    Title="Forgot Password"
    BackgroundColor="#FFFDE7">

    <ScrollView>
        <StackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- 顶部图标 -->
            <HorizontalStackLayout HorizontalOptions="End">
                <Frame
          HeightRequest="60"
          WidthRequest="60"
          CornerRadius="30"
          BackgroundColor="#FFF59D"
          HasShadow="False"
          HorizontalOptions="End"
          VerticalOptions="Start">
                    <Image
            Source="search_people_icon.png"
            HeightRequest="36"
            WidthRequest="36"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
                </Frame>
            </HorizontalStackLayout>

            <!-- 页面标题 -->
            <Label Text="Forget Your Password"
             FontSize="28"
             FontAttributes="Bold"
             HorizontalOptions="Center"
             TextColor="#333" />

            <!-- 副标题 -->
            <Label Text="Please choose one:"
             FontSize="16"
             HorizontalOptions="Center"
             TextColor="#666" />

            <!-- 验证方式按钮：手机号 -->
            <Button Text="Sent Verification to Your Phone Number"
              BackgroundColor="#4CAF50"
              TextColor="White"
              FontAttributes="Bold"
              CornerRadius="8"
              HeightRequest="50"
              Command="{Binding SendPhoneVerificationCommand}" />

            <!-- 验证方式按钮：邮箱 -->
            <Button Text="Sent Verification to Your Email"
              BackgroundColor="#4CAF50"
              TextColor="White"
              FontAttributes="Bold"
              CornerRadius="8"
              HeightRequest="50"
              Command="{Binding SendEmailVerificationCommand}" />

            <!-- 注册跳转 -->
            <Label Text="Sign Up"
             TextColor="Red"
             FontSize="14"
             HorizontalOptions="End">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToSignUpCommand}" />
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </ScrollView>
</ContentPage>
