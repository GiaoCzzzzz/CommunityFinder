<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityFinder.Views.VerifyTokenPage"
             Title="VerifyTokenPage">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="输入验证码" FontSize="24" HorizontalOptions="Center"/>
        <Entry x:Name="TokenEntry" Placeholder="验证码" Keyboard="Email"/>
        <Button Text="验证" Clicked="OnVerifyClicked" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>