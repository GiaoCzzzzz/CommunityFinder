<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityFinder.Views.ResetPasswordPage"
             Title="ResetPasswordPage">
    <StackLayout Padding="30" Spacing="20">
        <Label Text="请输入新密码" />
        <Entry x:Name="PasswordEntry" Placeholder="新密码" IsPassword="True" />
        <Entry x:Name="ConfirmEntry"  Placeholder="再次输入" IsPassword="True" />
        <Button Text="提交重置" Clicked="OnResetClicked" />
    </StackLayout>
</ContentPage>