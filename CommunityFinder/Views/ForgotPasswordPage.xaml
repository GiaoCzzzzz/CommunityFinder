<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityFinder.Views.ForgotPasswordPage"
             Title="ForgotPasswordPage">
    <StackLayout Padding="30" Spacing="15">
        <Label Text="请输入注册时使用的邮箱，我们将发送重置链接。" />
        <Entry x:Name="EmailEntry" Placeholder="邮箱" Keyboard="Email" />
        <Button Text="发送重置邮件" Clicked="OnSendResetClicked" />
    </StackLayout>
</ContentPage>