<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityFinder.Views.QuickLoginPage"
             Title="QuickLoginPage">
    <StackLayout
    Padding="30"
    Spacing="20"
    VerticalOptions="Center">

        <Label
      Text="欢迎使用快速登录"
      FontSize="Medium"
      HorizontalOptions="Center" />

        <Button
      x:Name="QuickLoginButton"
      Text="快速登录"
      Clicked="OnQuickLoginClicked" />

        <Button
      x:Name="GoToNormalLoginButton"
      Text="返回普通登录"
      Clicked="OnGoToNormalLoginClicked" />
    </StackLayout>
</ContentPage>